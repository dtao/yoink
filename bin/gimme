#!/usr/bin/env node

var commander = require('commander'),
    fs = require('fs'),
    path = require('path'),
    gimme = require('../gimme');

var pkgpath = path.join(__dirname, '..', 'package.json'),
    pkginfo = JSON.parse(fs.readFileSync(pkgpath));

commander
  .version(pkginfo.version)
  .usage('[options] <url>')
  .parse(process.argv);

if (process.argv.length < 3) {
  commander.help();
}

gimme(process.argv.pop());
